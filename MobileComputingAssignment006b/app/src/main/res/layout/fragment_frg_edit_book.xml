<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.uab.tindi.mobilecomputingassignment006b.FrgEditBook">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView_editBookID"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="10dp"
            android:text="00"/>
        <EditText
            android:id="@+id/textView_editBookTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:padding="20dp"
            android:hint="TITLE"/>

    </LinearLayout>

    <EditText
        android:id="@+id/textView_editBookAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:padding="20dp"
        android:hint="AUTHOR"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/textView_editBookPages"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:padding="20dp"
            android:hint="PAGES"/>
        <EditText
            android:id="@+id/textView_editBookYear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:padding="20dp"
            android:hint="YEAR"/>

    </LinearLayout>

    <EditText
        android:id="@+id/textView_editBookISBN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:padding="20dp"
        android:hint="ISBN"/>

</LinearLayout>
